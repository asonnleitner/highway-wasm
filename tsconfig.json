{
  "compilerOptions": {
    "baseUrl": ".",
    "target": "esnext",
    "module": "esnext",
    "moduleResolution": "node",
    "outDir": "dist",
    "importHelpers": true,
    "sourceMap": true,
    "skipLibCheck": true,
    "useDefineForClassFields": false,
    "allowJs": true,
    "strict": true,
    "noUnusedLocals": true,
    "experimentalDecorators": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "removeComments": false,
    "jsx": "preserve",
    "lib": ["esnext", "dom"],
    "types": ["jest", "puppeteer", "node"],
    "declaration": true,
    "typeRoots": [
      "node_modules/@types"
    ],
    "rootDir": ".",
    "paths": {
      "highway-wasm": ["js/highway-wasm/src"]
    }
  },
  "include": [
    "js/**/*.ts",
    "js/*/__tests__",
    "test-dts"
  ],
  "exclude": [
    "node_modules",
    "**/__tests__"
  ]
}
